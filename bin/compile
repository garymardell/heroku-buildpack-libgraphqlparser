#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}

# $1 = build_dir (location of the app)
# $2 = cache_dir
# $3 = env_dir (contains a file for each of the app's config variables)

mkdir -p $CACHE_DIR
cd $CACHE_DIR

# Download libgraphqlparser
if [ ! -f $2/v0.4.1.tar.gz ]; then
  wget https://github.com/graphql/libgraphqlparser/archive/v0.4.1.tar.gz
fi

# Install libgraphqlparser
mkdir -p $CACHE_DIR/libgraphqlparser
tar -xvzf v0.4.1.tar.gz -C $2/libgraphqlparser

cd $CACHE_DIR/libgraphqlparser/libgraphqlparser-0.4.1

cmake .
make
make install DESTDIR=$CACHE_DIR/libgraphqlparser-files

mkdir -p $HOME/libgraphqlparser
cp -r $CACHE_DIR/libgraphqlparser-files/usr/local/* $BUILD_DIR/libgraphqlparser

# Make the library files available to later buildpacks
echo "Adding libgraphqlparser to LD_LIBRARY_PATH..."
export LD_LIBRARY_PATH="$BUILD_DIR/libgraphqlparser/lib:$LD_LIBRARY_PATH"
echo "$LD_LIBRARY_PATH"

exit 0
